{
  "name": "frontend",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:copy": "bun run build && cp -r ./dist/* ../backend/public/",
    "watch:tsc": "tsc --watch --noEmit",
    "watch:build": "vite build --watch",
    "watch": "npm-run-all --parallel watch:tsc watch:build",
    "preview": "vite preview",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:browser": "vitest --workspace=vitest.workspace.browser.ts"
  },
