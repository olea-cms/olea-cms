.navbar.bg-neutral.text-neutral-content.fixed.top-0.w-full.z-40
  .navbar-start
    ul.menu.menu-horizontal.px-0(class='md:hidden')
      .dropdown
        .btn.btn-ghost.btn-sm(tabindex="0" role="button")
          :hero-icon(name='bars-3' size= 5)
        ul.dropdown-content.bg-base-200.menu.rounded-box.w-52.p-2.ring-1.ring-primary.z-20(tabindex="0")
          li
            a.flex.items-center.justify-center(class="md:hidden" href='/admin' x-cloak x-show="$router.path.includes('/admin')")
              :hero-icon(name='exclamation-triangle' size=4 attrs={ class: 'text-warning mr-2' })
              span.text-sm.font-bold Admin
              :hero-icon(name='exclamation-triangle' size=4 attrs={ class: 'text-warning ml-2' })
          .divider.m-0(x-cloak x-show="$router.path.includes('/admin')")
          li(data-testid='')
            a Blog
            ul.p-2#blog-categories
              li #[a Category 1]
              li #[a Category 2]
              //- get blog categories section from server with htmx
          li #[a Contact]
    .flex.items-center.gap-4(class='md:ml-4' data-testid='navbar-title')
      a.avatar.pl-2(class='md:pl-0' href='/')
        .w-5.h-5.rounded-full
          img.w-6.h-6(src=`/public/logo-circle-wrap-text.png`)
      a.btn.items-center.justify-center.hidden(class="md:flex md:ml-2" href='/admin' x-cloak x-show="$router.path.includes('/admin')")
        :hero-icon(name='exclamation-triangle' size=4 attrs={ class: 'text-warning mr-2' })
        span.text-sm.font-bold Admin
        :hero-icon(name='exclamation-triangle' size=4 attrs={ class: 'text-warning ml-2' })
  .navbar-center.hidden.lg(class="md:flex" x-show="!['/login', '/register', '/admin'].includes($router.path)")
    ul.menu.menu-horizontal.px-0(x-show="!['/login', '/register'].includes($router.path)")
      li.dropdown.dropdown-end
        .btn.btn-ghost.btn-sm(tabindex="0" role="button")
          | Blog
          :hero-icon(name='chevron-down' size=4)
        ul#blogCategories.dropdown-content.bg-base-200.menu.rounded-box.p-2.shadow.shadow-primary(class='z-[1]' tabindex="0")
          li #[a Category 1]
          li #[a Category 2]
      li #[a.btn.btn-ghost.btn-sm Contact]
  .navbar-end
    label.input.input-sm.input-ghost.items-center.gap-2.hidden(class='md:flex')
      input.grow.w-0(class='focus:w-full' type='text' placeholder='Search')
      :hero-icon(name='magnifying-glass' size=4)
    ul.menu.menu-horizontal.px-0(x-cloak x-show="$router.path.includes('/admin')")
      .dropdown.dropdown-end
        .btn.btn-ghost.btn-sm(tabindex="0" role="button")
          :hero-icon(name='chat-bubble-left-right' size= 5)
        ul.dropdown-content.bg-base-200.menu.rounded-box.w-52.p-2.ring-1.ring-primary.z-20(tabindex="0")
          li
            a(href='/register')
              :hero-icon(name='clipboard-document-list' size=4)
              | Register
          li
            a(href='/login')
              :hero-icon(name='key' size=4)
              | Log in
          div(x-show='getCookie(LOCALSTORAGE_AUTH_KEY) && !isExpired()')
            .divider.m-0
            li
              a(hx-post='/auth/logout' hx-on::trigger="startProgress()" hx-on::before-swap=`['isAuthed', 'authExpiry'].forEach((key) => localStorage.removeItem(key))`)
                :hero-icon(name='arrow-right-start-on-rectangle' size=4)
                | Log out
    ul.menu.menu-horizontal.px-0(x-cloak x-show="$router.path.includes('/admin')")
      .dropdown.dropdown-end
        .btn.btn-ghost.btn-sm(tabindex="0" role="button")
          :hero-icon(name='bell-alert' size= 5)
        ul.dropdown-content.bg-base-200.menu.rounded-box.w-52.p-2.ring-1.ring-primary.z-20(tabindex="0")
          li
            a(href='/register')
              :hero-icon(name='clipboard-document-list' size=4)
              | Register
          li
            a(href='/login')
              :hero-icon(name='key' size=4)
              | Log in
          div(x-show='getCookie(LOCALSTORAGE_AUTH_KEY) && !isExpired()')
            .divider.m-0
            li
              a(hx-post='/auth/logout' hx-on::trigger="startProgress()" hx-on::before-swap=`['isAuthed', 'authExpiry'].forEach((key) => localStorage.removeItem(key))`)
                :hero-icon(name='arrow-right-start-on-rectangle' size=4)
                | Log out
    ul.menu.menu-horizontal.px-0
      .dropdown.dropdown-end
        .btn.btn-ghost.btn-sm(tabindex="0" role="button")
          :hero-icon(name='user' size=5)
        ul.dropdown-content.bg-base-200.menu.rounded-box.w-52.p-2.ring-1.ring-primary.z-20(tabindex="0")
          li
            a(href='/register')
              :hero-icon(name='clipboard-document-list' size=4)
              | Register
          li
            a(href='/login')
              :hero-icon(name='key' size=4)
              | Log in
          div(x-show='getCookie(LOCALSTORAGE_AUTH_KEY) && !isExpired()')
            .divider.m-0
            li
              a(href='/admin')
                :hero-icon(name='wrench-screwdriver' size=4)
                | Admin dashboard
            .divider.m-0
            li
              a(hx-post='/auth/logout' hx-on::trigger="startProgress()" hx-on::before-swap=`['isAuthed', 'authExpiry'].forEach((key) => localStorage.removeItem(key))`)
                :hero-icon(name='arrow-right-start-on-rectangle' size=4)
                | Log out
